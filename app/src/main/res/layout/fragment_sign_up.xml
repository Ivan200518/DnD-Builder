<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/fragmentSignUp"
    android:layout_width="match_parent"
    android:background="#FFECCD"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="218dp"

        android:scaleType="centerCrop"
        android:src="@drawable/newimage" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="D&amp;D Builder"
        android:textSize="30sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/cornershape"
        android:backgroundTint="#D08566"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/loginButton"
            android:layout_width="142dp"
            android:layout_height="40dp"
            android:background="@drawable/cornershape"
            android:backgroundTint="@android:color/transparent"
            android:text="Вход"
            android:textAllCaps="false"
            android:textColor="#403B38"
            android:textSize="18sp" />

        <Button
            android:id="@+id/registerButton"
            android:layout_width="142dp"
            android:layout_height="40dp"
            android:layout_margin="3dp"
            android:background="@drawable/cornershape"
            android:backgroundTint="#FFECCD"
            android:text="Регистрация"
            android:textAllCaps="false"
            android:textColor="#403B38"
            android:textSize="18sp" />  <!-- Бирюзовый цвет (Material) -->

    </LinearLayout>

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:hint="Your name"
        android:layout_marginEnd = "40dp"
        android:layout_marginTop = "34dp"
        android:layout_marginStart ="40dp"
        android:padding="12dp" />


    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:hint="Password"
        android:layout_marginEnd = "40dp"
        android:layout_marginStart ="40dp"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        android:padding="12dp" />

    <EditText
        android:id="@+id/confirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:hint="Confirm password"
        android:layout_marginEnd = "40dp"
        android:layout_marginStart ="40dp"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        android:padding="12dp" />

    <Button
        android:id="@+id/registerButtonSuccess"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd = "40dp"
        android:background="@drawable/cornershape"
        android:layout_marginStart ="40dp"
        android:textAllCaps="false"
        android:backgroundTint="#403B38"
        android:text="Sign up"
        android:textColor="@color/white"
        />

</LinearLayout>